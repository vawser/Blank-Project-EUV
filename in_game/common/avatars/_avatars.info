# Avatars! The different forms or manifestations a god can take, and they receive different names. For example, Rama and Krishna are both avatars of Vishnu

# Use the following to add avatars to a country
# add_avatar = <avatar id>
# remove_avatar = <avatar id>

<key> = {
    god = <god key>     # God that this avatar is a manifestation of
    
    years = <value>     # Same as below.
    months = <value>    # Same as below.
    weeks = <value>     # Same as below.
    days = <value>      # Used to define how long it takes to become fully implemented. Modifiers will be scaled by how much of this time is completed.
    
    potential = {
        <triggers>
    } 
    # Trigger for whether the action is possible (root = country)
    
    allow = {
        <triggers>
    }
    # Trigger for whether the action can start (root = country)
    
    on_activate = {
        <effects>
    }
    # Effects to apply when the action is chosen (root = country)
    
    on_fully_activated = {
        <effects>
    }
    # Effects to apply when the action's implementation reaches 100% (instant if there's no time delay)
    
    on_deactivate = {
        <effects>
    }
    # Effects to apply when the action is removed (root = country)
    
    country_modifier = {
        potential_trigger = {
            <triggers>
        }
        # Optional: triggers for when this modifier is applied
        
        scale = <value> # Scale of the modifier
    
        <modifiers>
    }
    # Applied to the whole country that the avatar is in.
    
    province_modifier = {
        potential_trigger = {
            <triggers>
        }
        # Optional: triggers for when this modifier is applied
        
        scale = <value> # Scale of the modifier
    
        <modifiers>
    }
    # Applied to the province the avatar is in.
    
    location_modifier = {
        potential_trigger = {
            <triggers>
        }
        # Optional: triggers for when this modifier is applied
        
        scale = <value> # Scale of the modifier
    
        <modifiers>
    }
    # Applied to the location the avatar is in.
    
}