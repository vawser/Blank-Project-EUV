<key> = {
	traverse_family_tree = <bool>               # Use the family tree to calculate who's in line
	include_ruler_siblings = <bool>             # Include the ruler's siblings in the calculations
	all_in_country = <bool>                     # Consider every character in the country?
	all_in_dynasty = <bool>                     # Consider every character in the current ruler's dynasty?
	allow_children = <bool>                     # Consider characters under 18 be candidates? Default = no
	through_female = <bool>                     # Allow inheritance through the female line.
    
	allow_female = <bool>                       # Can women be candidates? Default = no
	allow_male = <bool>                         # Can men be candidates? Default = yes
    
	ignore_ruler = <bool>                       # Ignore the ruler from calculations (no for elections, yes for monarchies etc)
	use_election = <bool>                       # Do we use an election process
	show_candidates = <bool>                    # Do we show the list of candidates in the ui
	use_mothers_dynasty = <bool>                # Do we use the mother's dynasty to calculate
	max_possible_candidates = <int>             # Max number of candidates in an election
	term_duration = <int>                       # Term duration in months (default 0)
	allow_foreign_ruler = <bool>                # Should we allow characters who are rulers of another state already? Default = yes
    
	cached = no                                 # Should we keep a list of countries that use this heir selection law centrally so we can use it to speed up scripted routines?

	potential = {
        <triggers>
	}
    # Determine whether this selection type is visible in the UI

	allowed = {
        <triggers>
	}
    # Determine whether this selection type can be used.

	locked = {
        <triggers>
	}
    # Determine whether this selection type is unchangable.

	include_other_countries = {
        <triggers>
	}
    # Trigger to see if characters from a foreign country can be considered for the heir selection. Try to keep the criteria tight and fast to avoid a lot of processing
    # root = country being considered
    # scope:target = country the inheritance is happening in
    # Is completely skipped if empty, and is available outside of elections. Does not consider the original country

	candidate_country = {
        <triggers>
	}
    # Trigger to see if characters from a country can be considered for election. Try to keep the criteria tight and fast to avoid a lot of processing
    # root = country being considered
    # scope:target = country the election is happening in

	heir_is_allowed = {
        <triggers>
	}
    # if trigger is fulfilled or left blank, heir is valid to select
    # root = character
    # scope:target = country

	succession_effect = {
        <effects>
	}
    # an effect that happens right after succession occurs, but before candidates are recalculated
    # useful scopes:
    # root = country
    # scope:old_ruler
    # scope:new_ruler
    
	custom_tags = { 
        <strings> 
    }	
    # A list of custom strings to use to identify that succession law

	allowed_estates = { 
        <estate>
    } 
    # Candidates may only have these Estate types. If left blank it will work for all estates.

    # Calculate the score for each candidate that fulfills the above parameters
	calc = {
		if = {
			limit = {
				exists = root
			}
			add = {
				desc = "HEIR_SELECTION_OLDER_HEIR_DESC"
				value = character_age #use this over age_in_years as it includes days in case two characters are both the same age but born at different times
			}
		}

		# Here goes the description for the general tooltip.
		if = {
			limit = {
				not = { exists = root }
			}
			add = {
				desc = "HEIR_SELECTION_OLDER_HEIR_DESC"
				value = 1
			}
		}
	}

    # Calculate the score for each sibling when we're traversing the family tree
	sibling_score = {
		if = {
			limit = {
				exists = root
			}
			add = {
				desc = "HEIR_SELECTION_OLDER_HEIR_DESC"
				value = character_age #use this over age_in_years as it includes days in case two characters are both the same age but born at different times
			}
		}

		# Here goes the description for the general tooltip.
		if = {
			limit = {
				not = { exists = root }
			}
			add = {
				desc = "HEIR_SELECTION_OLDER_HEIR_DESC"
				value = 1
			}
		}
	}
}